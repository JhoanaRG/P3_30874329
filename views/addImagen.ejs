                    <input type="file" name="img" id="img" placeholder="Imagen">
                    <div class="inputbox">
                      <label for="destacado">Destacado</label>
	   <select id='destacado' name="destacado">
		<option value='1'>principal</option>
		<option value='0'>no main</option>
	   </select>
					</div>
					<div class="error hidden">
						<p>Error al iniciar sesion</p>
					</div>
					<input type="submit" value="agg Imagen" id="sendImg">
                    <a href="/productos" class="boton">Volver</a>
				</form>
			</div>
		</div>
	</section>
</body>
</html>